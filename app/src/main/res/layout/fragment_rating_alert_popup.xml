<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_18sdp"
        app:cardBackgroundColor="@color/gray_nurse"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/inter_medium"
                android:gravity="center_horizontal"
                android:textColor="@color/lunar_green"
                android:textFontWeight="500"
                android:textSize="21sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:fontFamily="@font/inter_regular"
                android:lineHeight="@dimen/_17sdp"
                android:text="Please rate your experience with store"
                android:textColor="@color/lunar_green"
                android:textFontWeight="400"
                android:textSize="15sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/storeRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:clickable="true"
                android:focusable="true"
                android:indeterminateDrawable="@drawable/custom_ratingbar"
                android:maxWidth="@dimen/_32sdp"
                android:maxHeight="@dimen/_32sdp"
                android:padding="@dimen/_7sdp"
                android:progressDrawable="@drawable/custom_ratingbar"
                android:stepSize=".5"
                app:mrb_indeterminateTint="@color/green_900"
                app:mrb_progressBackgroundTint="@color/green_900"
                app:mrb_progressTint="@color/green_900" />

            <TextView
                android:id="@+id/tvDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:fontFamily="@font/inter_regular"
                android:lineHeight="@dimen/_17sdp"
                android:text="Please rate your experience with driver"
                android:textColor="@color/lunar_green"
                android:textFontWeight="400"
                android:textSize="15sp" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/driverRatingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:clickable="true"
                android:focusable="true"
                android:indeterminateDrawable="@drawable/custom_ratingbar"
                android:maxWidth="@dimen/_32sdp"
                android:maxHeight="@dimen/_32sdp"
                android:padding="@dimen/_7sdp"
                android:progressDrawable="@drawable/custom_ratingbar"
                android:stepSize=".5"
                app:mrb_indeterminateTint="@color/green_900"
                app:mrb_progressBackgroundTint="@color/green_900"
                app:mrb_progressTint="@color/green_900" />


            <LinearLayout
                android:id="@+id/llSendAnEstimate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_tv_main_unselected"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/btnSendAnEstimate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:enabled="false"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="Send an estimate"
                    android:textColor="@color/green_100"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCancel"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_17sdp"
                android:background="@drawable/bg_btn_dim"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_9sdp"
                    android:text="Cancel"
                    android:textColor="@color/green_100"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>